toolsets = gnu gnu-osx;

action hello {
    commands = "echo Hello, cwd is:"
               "pwd"
               ;
}

action build-external-lib {
    commands = "make -C external-dir";
    inputs = external-dir/Makefile;
    outputs = external-dir/libexternal.so;
}

program main {
    deps = build-external-lib hello;
}
